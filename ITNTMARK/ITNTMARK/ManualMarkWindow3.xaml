<Window x:Class="ITNTMARK.ManualMarkWindow3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITNTMARK"
        mc:Ignorable="d"
        Title="ManualMarkWindow3" Height="900" Width="1600" WindowStartupLocation="CenterScreen" Closed="Window_Closed" Closing="Window_Closing" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="145*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="305*"/>
            <RowDefinition Height="220*"/>
        </Grid.RowDefinitions>

        <Grid Visibility="Visible">
            <Label Content="MANUAL MARKING" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="1045" Height="60" FontSize="36"/>
        </Grid>
        <Grid Grid.Row="1" Visibility="Visible">
            <Grid x:Name="PlateColor" Height="110" Width="1273" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Background="#FF566272"/>
            <Label x:Name="lblDispMinXMaxY" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="350,20,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" BorderBrush="#FF566272" BorderThickness="1" Foreground="#FFF9180D" FontSize="10" Background="#FF566272" Padding="0"/>
            <Label x:Name="lblDispMinXMinY" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="350,85,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" BorderBrush="#FF586270" BorderThickness="1" Foreground="#FFF9180D" FontSize="10" Background="#FF566272" Padding="0"/>
            <Label x:Name="lblDispCenXMinY" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="736,85,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" BorderBrush="#FF566272" BorderThickness="1" Foreground="#FFF11F15" FontSize="10" Background="#FF566272" Padding="0"/>
            <Label x:Name="lblDispMaxXMinY" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="1123,85,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" BorderBrush="#FF566272" BorderThickness="1" Foreground="#FFF9180D" FontSize="10" Background="#FF566272" Padding="0"/>
            <Label x:Name="lblDispMaxXMaxY" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="1123,20,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" BorderBrush="#FF5D636B" BorderThickness="1" Foreground="#FFF1170D" FontSize="10" Background="#FF566272" Padding="0"/>
            <Label x:Name="lblDispCenXMaxY" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="736,20,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" BorderBrush="#FF566272" BorderThickness="1" Foreground="#FFF9180D" FontSize="10" Background="#FF566272" Padding="0"/>
            <Label x:Name="lblDispCenXCenY" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="736,53,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" BorderBrush="#FF576272" BorderThickness="1" FontSize="10" FontWeight="Bold" Padding="0"/>

            <Grid x:Name="GridPallete" HorizontalAlignment="Left" Height="110" Margin="100,10,0,0" VerticalAlignment="Top" Width="35" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" />
            <Label x:Name="TxtMaxOffset" Content="+0.50" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Foreground="#FFFF4B00" Height="20" Width="50" Padding="0"/>
            <Label x:Name="TxtZeroOffset" Content="  0" HorizontalAlignment="Left" Margin="50,55,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#FF1C8631" Height="20" Width="50" Padding="0"/>
            <Label x:Name="TxtMinOffset" Content="-0.50" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Foreground="#FF00B4FF" Height="20" Width="50" Padding="0"/>

            <Label x:Name="lblDisplacementVal1" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="1450,20,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="106" BorderBrush="#FFB01717" BorderThickness="1" FontSize="16"/>
            <Label x:Name="lblDisplacementVal2" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="1450,70,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="106" BorderBrush="Black" BorderThickness="1" FontSize="18" FontWeight="Bold" Foreground="#FF151010"/>
        </Grid>
        <Grid Grid.Row="2" Visibility="Visible">
            <StackPanel Orientation="Horizontal" Margin="150,20,0,0" Height="85" Width="1280" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Canvas x:Name="cvsshowChar00" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar01" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar02" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar03" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar04" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar05" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar06" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar07" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar08" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar09" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar10" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar11" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar12" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar13" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar14" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar15" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar16" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar17" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
                <Canvas x:Name="cvsshowChar18" Background="DarkGray" Height="85" VerticalAlignment="Top" Width="67" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Visibility="Visible">
            <!--<Label Content="WaveFrom Profile" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="29" Margin="63,2,0,0" VerticalAlignment="Top" Width="139" FontSize="14" Padding="0,5,0,0" Grid.Row="3"/>
            <TextBox x:Name="txtCurrProfile" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" Margin="95,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"  FontSize="18" Grid.Row="3"/>-->
            <Label Content="VIN : " HorizontalAlignment="Left" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="70" Margin="264,10,0,0" VerticalAlignment="Top" Width="190" FontSize="30" FontWeight="Bold"/>
            <TextBox x:Name="txtVIN" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="70" Margin="470,10,0,0" TextWrapping="Wrap" Text="" Width="600" Background="#FF816565" FontSize="45" TextChanged="txtVIN_TextChanged" />
            <Label x:Name="lblVINLength" Content="" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="70" Margin="1100,10,0,0" VerticalAlignment="Top" Width="80" FontSize="40" FontWeight="Bold" Background="#FF958787"/>

            <Label Content="PATTERN :" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="90,100,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="50" Width="146" FontSize="26" FontWeight="Bold"/>
            <ComboBox x:Name="cbxPatternList" HorizontalAlignment="Left" Margin="240,100,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="300" Height="50" FontSize="26" FontWeight="Bold" />

            <Button x:Name="btnReadFont"  Content="READ FONT"  HorizontalAlignment="Left" Height="50" Margin="660,100,0,0"  VerticalAlignment="Top" Width="200" Click="btnReadFont_Click" FontSize="22" FontWeight="Bold"/>
            <Button x:Name="btnAreaCheck" Content="PLATE CHECK" HorizontalAlignment="Left" Height="50" Margin="960,100,0,0"  VerticalAlignment="Top" Width="200" Click="btnAreaCheck_Click" FontSize="22" FontWeight="Bold"/>
            <Button x:Name="btnMarkRun"   Content="START MARKING"  HorizontalAlignment="Left" Height="50" Margin="1260,100,0,0" VerticalAlignment="Top" Width="200" Click="btnMarkRun_Click" FontSize="22" FontWeight="Bold" />
            <!--<CheckBox x:Name="ckbSkipCheckPlane" Content="평면측정생략" HorizontalAlignment="Left" Height="25" Margin="1260,75,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="150" FontSize="20"/>-->

            <GroupBox HorizontalAlignment="Left" Height="85" Header="MARKING POSITION" Margin="1225,5,0,0" VerticalAlignment="Top" Width="280" FontSize="22" BorderBrush="Black" FontWeight="Bold" Visibility="Collapsed"/>
            <RadioButton x:Name="rbtMarkingPos1" GroupName="MarkingPos" Content="SEAT CROSS" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="1235,40,0,0" VerticalAlignment="Top" Padding="0" Height="35" Width="150" IsChecked="True" FontSize="20" FontWeight="Bold" Visibility="Collapsed"/>
            <RadioButton x:Name="rbtMarkingPos2" GroupName="MarkingPos" Content="APRON" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="1390,40,0,0" VerticalAlignment="Top" Padding="0" Height="35" Width="100" FontSize="20" FontWeight="Bold" Visibility="Collapsed"/>
        </Grid>
        <Grid Grid.Row="4" Visibility="Visible">
            <ListBox x:Name="lsbResult" HorizontalAlignment="Left" Height="190" Margin="10,10,0,0" VerticalAlignment="Top" Width="870" BorderBrush="Black" BorderThickness="2"/>
            <Button x:Name="btnExit" Content="EXIT" HorizontalAlignment="Left" Height="60" 
                Style="{StaticResource ITNTButton}" Margin="1260,140,0,0" VerticalAlignment="Top" Width="180" FontWeight="Bold" FontSize="26" FontFamily="Global Sans Serif" IsDefault="True" Click="btnExit_Click" IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
