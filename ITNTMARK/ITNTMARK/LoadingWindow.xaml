<Window x:Class="ITNTMARK.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:ITNTMARK"
        mc:Ignorable="d"
        WindowStyle="ToolWindow" Background="Transparent" WindowStartupLocation="CenterOwner" Topmost="True"
        ResizeMode="NoResize"
        Height="200" Width="200">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="Gray" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/Image/Loading_2.gif" x:Name="gifImage"/>
                <Label Height="0" Width="100" Visibility="Collapsed"/>
                <Button Content="CANCEL" Height="40" Width="120" Click="Cancel_Click" FontSize="20" Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
