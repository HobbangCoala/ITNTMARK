<Window x:Class="ITNTMARK.ComPortSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITNTMARK"
        mc:Ignorable="d"
        Title="컴포트 셋팅" Height="262" Width="409">
    <Grid>
        <Label Content="포트번호" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="40" Margin="45,28,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="170" FontSize="18" FontWeight="Bold"/>
        <Label Content="통신속도" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="40" Margin="45,83,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="170" FontSize="18" FontWeight="Bold"/>
        <ComboBox x:Name="ComPortNum" HorizontalAlignment="Left" Margin="235,28,0,0" VerticalAlignment="Top" Width="120" Height="37"/>
        <ComboBox x:Name="ComPortBaud" HorizontalAlignment="Left" Margin="235,83,0,0" VerticalAlignment="Top" Width="120" Height="30"/>
        <Button x:Name="btnSave" Content="저장" HorizontalAlignment="Left" Height="35" Margin="45,158,0,0" VerticalAlignment="Top" Width="125" FontSize="18" FontWeight="Bold" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="닫기" HorizontalAlignment="Left" Height="35" Margin="230,158,0,0" VerticalAlignment="Top" Width="125" FontSize="18" FontWeight="Bold" IsCancel="True" IsDefault="True" Click="btnCancel_Click"/>

    </Grid>
</Window>
