<Window x:Class="ITNTMARK.ManualMarkWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITNTMARK"
        mc:Ignorable="d"
        Title="ManualMarkWindow2" Height="900" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="180*"/>
            <RowDefinition Height="260*"/>
            <RowDefinition Height="210*"/>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel x:Name="stpVINDisplay" HorizontalAlignment="Left" Height="135" Margin="140,20,0,0" VerticalAlignment="Top" Width="1311" Orientation="Vertical" Visibility="Visible">
                <Label Content="VEHICLE IDENTIFICATION NUMBER" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="1311" FontSize="26" FontWeight="Bold"
                    Background="Blue" Foreground="White" BorderBrush="Black" BorderThickness="0,0,0,0" />
                <StackPanel Orientation="Horizontal" Height="85">
                    <Canvas x:Name="cvsshowChar00" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar01" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar02" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar03" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar04" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar05" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar06" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar07" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar08" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar09" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar10" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar11" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar12" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar13" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar14" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar15" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar16" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar17" Background="#FFE1E1E1" Height="85" Width="69" />
                    <Canvas x:Name="cvsshowChar18" Background="#FFE1E1E1" Height="85" Width="69" />
                </StackPanel>
                <!--<Label x:Name="lbllblCurrentVIN" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="585" FontSize="20" FontWeight="Bold"
                       Foreground="Blue" BorderBrush="Gray" BorderThickness="2,0,0,2" Background="#FFC8C8C8"/>-->
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Label Content="VEHICLE IDENTIFICATION&#xA;          NUMBER" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="102" Margin="144,36,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="374" FontSize="26" FontWeight="Bold" Visibility="Collapsed"/>
            <TextBox x:Name="txtVINNumber" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="350,30,0,0" TextWrapping="Wrap" Width="910" FontSize="60" FontWeight="Bold" Height="100" BorderBrush="#FF5072DD" BorderThickness="3.5" TextChanged="txtVINNumber_TextChanged"/>
            <Label x:Name="lblVINLength" Content="" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="100" Margin="1300,30,0,0" VerticalAlignment="Top" Width="100" FontSize="30" FontWeight="Bold" Background="#FF958787"/>
            <Image HorizontalAlignment="Left" Height="45" Margin="578,132,0,0" VerticalAlignment="Top" Width="34" Source="image\arrow-icon-l-256.png" Stretch="Fill"/>
        </Grid>
        <Grid Grid.Row="2">
            <Label Content="PATTERN :" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="190,20,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="57" Width="146" FontSize="26" FontWeight="Bold"/>
            <ComboBox x:Name="cbxPatternList" HorizontalAlignment="Left" Margin="366,20,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="281" Height="60" FontSize="26" FontWeight="Bold" SelectionChanged="cbxPatternList_SelectionChanged" />
            <Button x:Name="btnSendData" Content="PLATE CHECK" HorizontalAlignment="Left" Margin="855,20,0,0" VerticalAlignment="Top" Width="252" Height="60" FontSize="26" FontWeight="Bold"/>
            <Button x:Name="btnMarkStart" Content="START MARKING" HorizontalAlignment="Left" Margin="1207,20,0,0" VerticalAlignment="Top" Width="252" Height="60" FontSize="26" FontWeight="Bold"/>
            <!--<Label Content="ON  = Pattern 1" HorizontalAlignment="Left" Height="40" Margin="368,74,0,0" VerticalAlignment="Top" Width="279" FontSize="24" FontFamily="Consolas"/>
            <Label Content="NQ5 = Pattern 2" HorizontalAlignment="Left" Height="40" Margin="368,114,0,0" VerticalAlignment="Top" Width="279" FontSize="24" FontFamily="Consolas"/>
            <Label Content="DL3 = Pattern 3" HorizontalAlignment="Left" Height="40" Margin="366,154,0,0" VerticalAlignment="Top" Width="281" FontSize="24" FontFamily="Consolas"/>
            <Label Content="MQ4 = Pattern 4" HorizontalAlignment="Left" Height="40" Margin="366,194,0,0" VerticalAlignment="Top" Width="281" FontSize="24" FontFamily="Consolas"/>-->
            <Button Visibility="Hidden" Content="Button" HorizontalAlignment="Left" Height="47" Margin="1387,25,0,0" VerticalAlignment="Top" Width="136"/>
            <Image HorizontalAlignment="Left" Height="30" Margin="721,25,0,0" VerticalAlignment="Top" Width="66" Source="Image/arrow-icon-s-256.png" Stretch="Fill"/>
            <Image HorizontalAlignment="Left" Height="30" Margin="1127,32,0,0" VerticalAlignment="Top" Width="66" Source="Image/arrow-icon-s-256.png" Stretch="Fill"/>
            <Image HorizontalAlignment="Left" Height="220" Margin="1316,99,0,-83" VerticalAlignment="Top" Width="33" Source="Image/arrow-icon-l-256.png" Stretch="Fill"/>
        </Grid>
        <Grid Grid.Row="3">
            <ListBox x:Name="lsbResult" BorderThickness="3" BorderBrush="Black" HorizontalAlignment="Left" Height="186" Margin="140,10,0,0"  VerticalAlignment="Top" Width="979"/>
            <Button x:Name="btnExit" Content="EXIT" HorizontalAlignment="Left"  Margin="1207,63,0,0" VerticalAlignment="Top" Width="252" Height="88" FontSize="28" FontWeight="Bold" IsCancel="True" IsDefault="True" Click="btnExit_Click" />
        </Grid>
    </Grid>
</Window>
